<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.murach.invoice.InvoiceTotalActivity">

    <TextView
        android:id="@+id/SubtotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtotal"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/editTextSubTotalID"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/editTextSubTotalID"
        android:layout_width="157dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/DiscountPercentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount Percent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/SubtotalLabel"
        app:layout_constraintRight_toLeftOf="@+id/textViewDiscountPercentID"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textViewDiscountPercentID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="139dp"
        android:layout_marginTop="38dp"
        android:text="10%"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSubTotalID" />

    <TextView
        android:id="@+id/DiscountAmouLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount Amount"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/DiscountPercentLabel"
        app:layout_constraintRight_toLeftOf="@+id/textViewDiscountAmountID"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textViewDiscountAmountID"
        android:layout_width="90dp"
        android:layout_height="19dp"
        android:layout_marginRight="83dp"
        android:text="$15"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewDiscountPercentID" />

    <TextView
        android:id="@+id/TotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textViewTotalID"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/DiscountAmouLabel" />

    <TextView
        android:id="@+id/textViewTotalID"
        android:layout_width="111dp"
        android:layout_height="22dp"
        android:layout_marginRight="62dp"
        android:text="$135"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewDiscountAmountID" />
</android.support.constraint.ConstraintLayout>
